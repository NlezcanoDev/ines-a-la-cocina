---
import { Image } from 'astro:assets'
import Liston from '../../assets/icons/png/liston.png'
---

<div class="section-header container px-4 lg:px-10 xl:px-40">
	<Image src={Liston} alt="" class="section-header-liston" />
	<div class="section-header-ribbon">
		<h2>
			<slot />
		</h2>
	</div>
	<Image src={Liston} alt="" class="section-header-liston" />
</div>

<style>
	.section-header {
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 16px;
		margin-bottom: 16px;
		margin-top: 16px;
	}

	.section-header-ribbon {
		font-size: 16px;
		font-weight: bold;
		color: #fff;
		text-transform: uppercase;
	}
	.section-header-ribbon {
		--r: 0.8em;

		padding-inline: calc(var(--r) + 1em);
		line-height: 1.8;
		clip-path: polygon(
			0 0,
			100% 0,
			calc(100% - var(--r)) 50%,
			100% 100%,
			0 100%,
			var(--r) 50%
		);
		background: var(--chocolate);
		width: fit-content;
		min-width: 240px;
		text-align: center;

		h2 {
			display: inline-block;
			padding: 4px 0;
		}
	}
	.section-header-liston {
		height: auto;
		width: 70px;
	}

	@media (min-width: 480px) {
		.section-header-liston {
			width: auto;
			max-width: 120px;
		}
	}

	/* TABLE SM */
	@media (min-width: 640px) {
		.section-header-ribbon {
			font-size: 20px;
			min-width: 280px;
		}
		.section-header-liston {
			max-width: 160px;
		}
	}

	/* TABLET MD */
	@media (min-width: 768px) {
		.section-header-ribbon {
			font-size: 22px;
			min-width: none;
		}

		.section-header-liston {
			height: 36px;
			width: auto;
			max-width: inherit;
		}
	}

	/* TABLET LG */
	@media (min-width: 1024px) {
		.section-header {
			font-size: 24px;
		}
	}

	/* DESKTOP */
	@media (min-width: 1280px) {
		.section-header {
			font-size: 28px;
		}
	}

	/* DESKTOP LG */
	@media (min-width: 1536px) {
	}
</style>
