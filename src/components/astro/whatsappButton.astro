---
import { Image } from 'astro:assets'
import WhatsappLogo from '../../assets/icons/svg/whatsapp-logo.svg'

const telefono: number = import.meta.env.WHATSAPP_CONTACT
const mensaje: string = import.meta.env.WHATSAPP_MESSAGE
---

<a
	id="whatsapp-btn"
	href={`https://wa.me/${telefono}?text=${mensaje.replaceAll(' ', '%20')}`}
>
	<Image src={WhatsappLogo} alt="Whatsapp" />
</a>

<style>
	#whatsapp-btn {
		width: 48px;
		height: 48px;
		border-radius: 34px;
		display: grid;
		place-content: center;
		position: fixed;
		bottom: 30px;
		right: 30px;
		background-color: var(--orange);
		box-shadow: 2px 2px 4px 0px #72483233;
		cursor: pointer;
		transition: all 0.3s linear;
		z-index: 3000;

		&:hover {
			filter: saturate(1.3);
		}
		&:active {
			box-shadow: none;
		}
	}

	#whatsapp-btn img {
		width: 30px;
	}

	@media (min-width: 768px) {
		#whatsapp-btn {
			width: 68px;
			height: 68px;
		}

		#whatsapp-btn img {
			width: 40px;
		}
	}
</style>
