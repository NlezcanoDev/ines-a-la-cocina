---
import { Image } from 'astro:assets'
import WhatsappLogo from '../../assets/icons/svg/whatsapp-logo.svg'
---

<a id="whatsapp-btn">
	<Image src={WhatsappLogo} alt="Whatsapp" />
</a>

<style>
	#whatsapp-btn {
		width: 68px;
		height: 68px;
		border-radius: 34px;
		display: grid;
		place-content: center;
		position: fixed;
		bottom: 30px;
		right: 30px;
		background-color: var(--orange);
		box-shadow: 2px 2px 4px 0px #72483233;
		cursor: pointer;
		transition: all 0.3s linear;
		z-index: 3000;

		&:hover {
			filter: saturate(1.3);
		}
		&:active {
			box-shadow: none;
		}
	}
</style>
