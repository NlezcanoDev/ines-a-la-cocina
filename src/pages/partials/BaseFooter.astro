---
import { Image } from 'astro:assets'
import Logo from '../../assets/icons/logo/logo-cuadrado.svg'
import Instagram from '../../assets/icons/svg/instagram-logo.svg'
---

<footer id="contacto">
	<div class="wave"></div>
	<div>
		<p>Ciudad Autónoma de Buenos Aires, Argentina</p>
		<p>(+54 9) 11 6539-2658</p>
		<Image src={Logo} alt="Logo de Inés a la cocina" class="mx-auto my-8" />
		<div class="redes">
			<span>Seguinos en redes</span>
			<Image src={Instagram} alt="Instagram" />
			<a
				href="https://www.instagram.com/inesalacocina/"
				target="_blank"
				no-referrer
			>
				inesalacocina
			</a>
		</div>
	</div>
</footer>

<style>
	footer {
		position: relative;
		width: 100%;
		padding-top: 16px;
		margin-top: 16px;
		padding-bottom: 24px;
		color: white;
		background-color: #724832ea;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		z-index: 1000;

		p {
			font-size: 20px;
			line-height: 28px;
			text-align: center;
			color: white;
		}
	}

	.redes {
		display: inline-flex;
		gap: 4px;
		font-size: 20px;

		img {
			margin-left: 12px;
		}
	}
	.wave {
		--mask: radial-gradient(
					38.59px at 50% calc(100% - 53px),
					#000 99%,
					#0000 101%
				)
				calc(50% - 40px) 0/80px 100%,
			radial-gradient(
					38.59px at 50% calc(100% + 33px),
					#0000 99%,
					#000 101%
				)
				50% calc(100% - 20px) / 80px 100% repeat-x;
		-webkit-mask: var(--mask);
		mask: var(--mask);
	}

	.wave {
		position: absolute;
		top: -40px;
		transform: rotate(180deg);
		display: block;
		height: 40px;
		width: 100dvw;
		background: #724832ea;
		-webkit-mask: var(--mask);
		mask: var(--mask);
		z-index: 10000;
	}
</style>
